{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Ninja (Debug)",
            "type": "shell",
            "dependsOn": [
                "cmake ninja debug"
            ],
            "command": "ninja",
            "args": [],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "never"
            },
            "options": {
                "cwd": "${workspaceRoot}/build",
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Ninja (Distribute)",
            "type": "shell",
            "dependsOn": [
                "resources distribute linux",
                "cmake ninja distribute"
            ],
            "command": "ninja",
            "args": [
                "install"
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "never"
            },
            "options": {
                "cwd": "${workspaceRoot}/build",
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        },
        {
            "label": "resources distribute linux",
            "type": "shell",
            "dependsOn":[
                "cmake ninja distribute"
            ],
            "command": "mkdir",
            "args": [
                "-p",
                "build/skunkwork_dist",
                "&&",
                "cp",
                "-r",
                "res",
                "build/skunkwork_dist/"
            ],
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            }
        },
        {
            "label": "cmake ninja distribute",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-G",
                "Ninja",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DDISTRIBUTE_DEMO=1"
            ],
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            }
        },
        {
            "label": "cmake ninja debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                // Ninja color output
                "-DCMAKE_CXX_FLAGS=-fdiagnostics-color=always",
                "-G",
                "Ninja",
                "-B",
                "build",
                "-DDISTRIBUTE_DEMO=0"
            ],
            "options": {
                "env": {
                    "CC": "clang",
                    "CXX": "clang++",
                }
            },
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            }
        },
        {
            "label": "MSBuild (Debug)",
            "type": "shell",
            "dependsOn": [
                "cmake"
            ],
            "command": "msbuild",
            "args": [
                // Ask msbuild to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                "/t:build",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary",
                "/property:Configuration=Debug",
                "skunkwork.vcxproj"
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "never"
            },
            "options": {
                "cwd": "${workspaceRoot}/build",
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        },
        {
            "label": "MSBuild (Distribute)",
            "type": "shell",
            "dependsOn": [
                "resources distribute windows",
                "cmake vs distribute"
            ],
            "command": "msbuild",
            "args": [
                "/property:Configuration=Release",
                "INSTALL.vcxproj"
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "never"
            },
            "options": {
                "cwd": "${workspaceRoot}/build",
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        },
        {
            "label": "resources distribute windows",
            "type": "shell",
            "dependsOn":[
                "cmake vs distribute"
            ],
            "command": "(mkdir",
            "args": [
                "-p",
                "build/skunkwork_dist)",
                "-and",
                "(cp",
                "-r",
                "res",
                "build/skunkwork_dist/)"
            ],
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            }
        },
        {
            "label": "cmake vs distribute",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-DDISTRIBUTE_DEMO=1",
                "-G",
                "Visual Studio 17 2022"
            ],
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            }
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
            ],
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            }
        }
    ]
}
